---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2>
			<a href="/">
				<span class="brand-mark" aria-hidden="true">
					<svg width="22" height="22" viewBox="0 0 128 128" xmlns="http://www.w3.org/2000/svg" role="img" aria-labelledby="title desc">
					  <title>Blue Wine Glass Emoji - 82% full</title>
					  <desc>Transparent wine glass filled to 82% with blue wine</desc>

					  <defs>
					    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
					      <feDropShadow dx="0" dy="2" stdDeviation="2" flood-color="#000" flood-opacity="0.25"/>
					    </filter>
					    <linearGradient id="wineGrad" x1="0" y1="0" x2="0" y2="1">
					      <stop offset="0%" stop-color="#4cc3ff"/>
					      <stop offset="100%" stop-color="#0066cc"/>
					    </linearGradient>
					    <linearGradient id="glassGrad" x1="0" y1="0" x2="1" y2="1">
					      <stop offset="0%" stop-color="#ffffff" stop-opacity="0.25"/>
					      <stop offset="100%" stop-color="#ffffff" stop-opacity="0.05"/>
					    </linearGradient>
					    <linearGradient id="hl" x1="0" y1="0" x2="0" y2="1">
					      <stop offset="0%" stop-color="#ffffff" stop-opacity="0.9"/>
					      <stop offset="100%" stop-color="#ffffff" stop-opacity="0"/>
					    </linearGradient>
					  </defs>

					  <ellipse cx="64" cy="110" rx="26" ry="6" fill="#000" opacity="0.08"/>

					  <g filter="url(#shadow)">
					    <rect x="60" y="76" width="8" height="26" rx="4" fill="url(#glassGrad)" stroke="#9aa4ad" stroke-opacity="0.7" stroke-width="2"/>
					    <ellipse cx="64" cy="104" rx="22" ry="6" fill="url(#glassGrad)" stroke="#9aa4ad" stroke-opacity="0.7" stroke-width="2"/>
					  </g>

					  <g filter="url(#shadow)">
					    <path id="bowl"
					      d="M32,18 h64 c0,18 -10,34 -28,43 v13 h-8 v-13 C42,52 32,36 32,18z"
					      fill="url(#glassGrad)" fill-opacity="0.6" stroke="#9aa4ad" stroke-width="3" stroke-linejoin="round"/>

					    <clipPath id="bowlClip">
					      <use href="#bowl"/>
					    </clipPath>
					    <g clip-path="url(#bowlClip)">
					      <path d="M38,31 C50,28 78,28 90,31 L90,72 C78,77 50,77 38,72 Z" fill="url(#wineGrad)"/>
					      <path d="M40,32 C52,29 76,29 88,32" fill="none" stroke="#ffffff" stroke-opacity="0.4" stroke-width="2"/>
					    </g>

					    <path d="M34,18 h60" stroke="url(#hl)" stroke-width="3" stroke-linecap="round"/>
					    <path d="M92,22 C92,44 83,58 70,66" fill="none" stroke="url(#hl)" stroke-width="3" stroke-linecap="round" opacity="0.8"/>
					  </g>
					</svg>
				</span>
				<span class="brand-text" aria-label={SITE_TITLE}>
					<span class="bt-blue">블루</span><span class="bt-wine">와인</span>
				</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/golf">Golf</HeaderLink>
			<HeaderLink href="/hotel">Hotel</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.youtube.com" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">YouTube로 이동</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32" fill="currentColor">
					<path d="M23.5 6.2a4 4 0 0 0-2.8-2.8C18.9 3 12 3 12 3s-6.9 0-8.7.4A4 4 0 0 0 .5 6.2 41 41 0 0 0 0 12a41 41 0 0 0 .5 5.8 4 4 0 0 0 2.8 2.8C5.1 21 12 21 12 21s6.9 0 8.7-.4a4 4 0 0 0 2.8-2.8 41 41 0 0 0 .5-5.8 41 41 0 0 0-.5-5.8zM9.75 15.5v-7l6.25 3.5-6.25 3.5z"/>
				</svg>
			</a>
			<a href="https://twitter.com/astrodotbuild" target="_blank">
				<span class="sr-only">Twitter 팔로우</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
					></path></svg
					>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	.brand-mark { display: inline-flex; vertical-align: middle; margin-right: .35rem; }
	.brand-text { vertical-align: middle; display:inline-flex; gap:.05rem; align-items:center; font-weight:1000; font-size:1.08rem; letter-spacing:.2px; font-family: ui-sans-serif, system-ui, -apple-system, "Inter", "Pretendard", "Apple SD Gothic Neo", "Noto Sans KR", sans-serif; }
	.bt-blue, .bt-wine { -webkit-background-clip:text; background-clip:text; color:transparent; text-shadow: 0 1px 0 rgba(0,0,0,0.06); }
	.bt-blue, .bt-wine { color:#0f172a; text-shadow: 0 1px 0 rgba(0,0,0,0.06); background:none; -webkit-background-clip: initial; background-clip: initial; }
	.bt-blue { background:none; }
	.bt-wine { background:none; }
	@media (max-width: 720px) { .brand-text { font-size:1rem; } }
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		nav {
			flex-wrap: wrap;
			gap: 0.25rem;
			justify-content: center;
		}
		.internal-links {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			width: 100%;
		}
		nav a {
			padding: 0.6em 0.4em;
			font-size: 0.95rem;
		}
	}
</style>
