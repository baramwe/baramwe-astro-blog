---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const heroImage = '/asia-1.png';
const mbtiImage = '/mbti.png';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main { width: 960px; }
			.hero { text-align: center; margin: 0 0 1rem 0; }
			.hero img { width: 100%; border-radius: 12px; box-shadow: var(--box-shadow); }
			.mbti { margin-top: .75rem; }
			.mbti a { display: inline-block; }
			.mbti img { width: 100%; max-width: 480px; border-radius: 12px; box-shadow: var(--box-shadow); }
			.mbti .caption { margin-top: .5rem; font-size: 1rem; color: rgb(var(--gray)); }
			.clip { display: grid; place-items: center; margin-top: .25rem; }
			.clip video { width: 100%; max-width: 680px; border-radius: 12px; box-shadow: var(--box-shadow); outline: none; cursor: pointer; }
			.clip video:hover { filter: brightness(1.02); }
			.clip .clip-caption { margin-top: .35rem; font-size: .95rem; color: rgb(var(--gray)); text-align: center; }
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li { width: calc(50% - 1rem); }
			ul li * { text-decoration: none; transition: 0.2s ease; }
			ul li:first-child { width: 100%; margin-bottom: 1rem; text-align: center; }
			ul li:first-child img { width: 100%; }
			ul li:first-child .title { font-size: 2.369rem; }
			ul li img { margin-bottom: 0.5rem; border-radius: 12px; }
			ul li a { display: block; }
			.title { margin: 0; color: rgb(var(--black)); line-height: 1; }
			.date { margin: 0; color: rgb(var(--gray)); }
			ul li a:hover h4, ul li a:hover .date { color: rgb(var(--accent)); }
			ul a:hover img { box-shadow: var(--box-shadow); }
			@media (max-width: 720px) {
				ul { gap: 0.5em; }
				ul li { width: 100%; text-align: center; }
				ul li:first-child { margin-bottom: 0; }
				ul li:first-child .title { font-size: 1.563em; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="mbti">
					<a href="/mbti" aria-label="골프 MBTI 테스트로 이동">
						<img src={mbtiImage} width="680" height="340" alt="골프 MBTI" />
					</a>
					<div class="caption">당신의 골프 스타일을 확인하세요</div><br>
					<div class="clip">
						<video id="golf-clip" width="680" height="382" muted preload="metadata" playsinline>
							<source src="https://baramwe.github.io/image/golf/ai/20250802.mp4#t=0.1" type="video/mp4" />
							이 브라우저는 동영상을 지원하지 않습니다.
						</video>
						<div class="clip-caption">2025 Japan Sapporo Championship</div>
					</div>
					<div class="clip">
						<video id="golf-clip-2" width="680" height="382" muted preload="metadata" playsinline>
							<source src="https://baramwe.github.io/image/golf/ai/Miyako_Island.mp4#t=0.1" type="video/mp4" />
							이 브라우저는 동영상을 지원하지 않습니다.
						</video>
						<div class="clip-caption">2025 Miyako Island Championship</div>
					</div>
				</div>
			</section>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
		<script>
		(function(){
			function wire(id){
				const v = document.getElementById(id);
				if(!v) return;
				const play = ()=>{ if(v.paused){ v.play().catch(()=>{}); } };
				const pause = ()=>{ if(!v.paused){ v.pause(); } };
				v.addEventListener('mouseenter', play, {passive:true});
				v.addEventListener('mouseleave', pause, {passive:true});
				v.addEventListener('touchstart', play, {passive:true});
				v.addEventListener('touchend', pause, {passive:true});
				v.addEventListener('click', async ()=>{
					if(!v.paused){ v.pause(); } else { await v.play().catch(()=>{}); }
					try {
						if (!document.fullscreenElement){
							if (v.requestFullscreen) await v.requestFullscreen();
							else if (v.webkitRequestFullscreen) v.webkitRequestFullscreen();
						}
					} catch(_) {}
				}, {passive:true});
			}
			wire('golf-clip');
			wire('golf-clip-2');
		})();
		</script>
	</body>
</html>
